@model QuanLySanXuat.Models.Phanxuong

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thêm mới</h1>

<h4>Phanxuong</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaPhanXuong" class="control-label"></label>
                <input asp-for="MaPhanXuong" class="form-control" />
                <span asp-validation-for="MaPhanXuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenPhanXuong" class="control-label"></label>
                <input asp-for="TenPhanXuong" class="form-control" />
                <span asp-validation-for="TenPhanXuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DienThoai" class="control-label"></label>
                <input asp-for="DienThoai" class="form-control" />
                <span asp-validation-for="DienThoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoTenQuanDoc" class="control-label"></label>
                <input asp-for="HoTenQuanDoc" class="form-control" />
                <span asp-validation-for="HoTenQuanDoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
