@model QuanLySanXuat.Models.Phancong

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sửa</h1>

<h4>Phancong</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SoPhanCong" />
            <div class="form-group">
                <label asp-for="MaPhanXuong" class="control-label"></label>
                <select asp-for="MaPhanXuong" class="form-control" asp-items="ViewBag.MaPhanXuong"></select>
                <span asp-validation-for="MaPhanXuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoPhieu" class="control-label"></label>
                <select asp-for="SoPhieu" class="form-control" asp-items="ViewBag.SoPhieu"></select>
                <span asp-validation-for="SoPhieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaThuoc" class="control-label"></label>
                <select asp-for="MaThuoc" class="form-control" asp-items="ViewBag.MaThuoc"></select>
                <span asp-validation-for="MaThuoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu lại" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
